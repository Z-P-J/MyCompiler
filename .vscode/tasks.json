{
    "version": "2.0.0",
    "command": "g++",
    "args": [
        "-g", 
        "${file}", 
        "-o", 
        "${fileDirname}/${fileBasenameNoExtension}.exe"
    ], // 编译命令参数
    "problemMatcher": {
      "owner": "c",
      "fileLocation": ["relative", "${workspaceRoot}"],
      "pattern": {
        "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
        "file": 1,
        "line": 2,
        "column": 3,
        "severity": 4,
        "message": 5
      }
    }
  }